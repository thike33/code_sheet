<header class="flex justify-between items-center sticky top-0 left-0 z-50 h-14 pl-5 pr-3 bg-sub-color shadow-md md:h-16 md:px-5">
  <h1 class="h-full">
    <%= link_to 'CodeSheet', root_path, class: 'flex items-center h-full text-white text-2xl font-bold md:text-4xl' %>
  </h1>
  <nav class="hidden h-full md:block">
    <ul class="flex gap-5 h-full">
      <li class="h-full">
        <%= link_to t('header.post_index'), posts_path, class: 'flex items-center h-full text-white hover:underline' %>
      </li>
      <li class="h-full">
        <%= link_to t('header.post_new'), new_post_path, class: 'flex items-center h-full text-white hover:underline' %>
      </li>
      <li class="h-full">
        <button type="button" class="flex items-center gap-1 h-full text-white js-user-btn after:content-['＜'] after:text-white after:font-bold after:text-xs after:leading-none after:duration-300">
          <%= image_tag current_user.avatar_url, class: 'w-12 h-12 object-cover rounded-full', size: '48x48', alt: 'ユーザーアイコン' %>
        </button>
      </li>
    </ul>
  </nav>
  <ul class="flex flex-col gap-1 fixed top-14 right-0 translate-x-52 z-50 w-52 py-3 bg-sub-color duration-300 js-user-menu">
    <li>
      <%= link_to t('header.my_page'), user_path(current_user), class: 'block p-3 text-white text-center hover:underline' %>
    </li>
    <li>
      <%= link_to t('header.my_post_index'), user_index_post_path(current_user), class: 'block p-3 text-white text-center hover:underline' %>
    </li>
    <li>
      <%= link_to  t('header.bookmark_index'), '', class: 'block p-3 text-white text-center hover:underline' %>
    </li>
    <li>
      <%= link_to  t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'block p-3 text-white text-center hover:underline' %>
    </li>
  </ul>

  <button type="button" class="flex items-center gap-1 h-full text-white md:hidden js-header-btn after:content-['＜'] after:text-white after:font-bold after:text-xs after:leading-none after:duration-300">
    <%= image_tag 'user_icon.svg', class: 'w-12 h-12 object-cover rounded-full', size: '48x48', alt: 'ユーザーアイコン' %>
  </button>
  <ul class="flex flex-col gap-1 fixed top-14 right-0 translate-x-40 z-50 w-40 py-3 bg-sub-color duration-300 js-header-menu">
    <li>
      <%= link_to t('header.post_index'), posts_path, class: 'block p-3 text-white text-center' %>
    </li>
    <li>
      <%= link_to t('header.post_new'), new_post_path, class: 'block p-3 text-white text-center' %>
    </li>
    <li>
      <%= link_to t('header.my_page'), user_path(current_user), class: 'block p-3 text-white text-center' %>
    </li>
    <li>
      <%= link_to t('header.my_post_index'), user_index_post_path(current_user), class: 'block p-3 text-white text-center' %>
    </li>
    <li>
      <%= link_to  t('header.bookmark_index'), '', class: 'block p-3 text-white text-center' %>
    </li>
    <li>
      <%= link_to  t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'block p-3 text-white text-center' %>
    </li>
  </ul>
</header>